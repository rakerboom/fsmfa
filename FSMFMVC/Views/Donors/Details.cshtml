@model IEnumerable<FSMFMVC.Models.Donor2>

@{
    ViewBag.Title = "Details";
}

<h2>@ViewBag.level</h2>

@foreach (var item in Model)
{
    <div class="media">
        @if (item.ImagePath != null)
        {
            <div class="media-left">
                <img class="media-object" src="/Images/Donor/@Html.DisplayFor(modelItem => item.ImagePath)" alt="@Html.DisplayFor(modelItem => item.ImagePath)">
            </div>
        }
        <div class="media-body">
            <h4 class="media-heading">@Html.DisplayFor(modelItem => item.Title)</h4>
            <p><a href="@Html.DisplayFor(modelItem => item.link)" target="_blank" class="userlink">@Html.DisplayFor(modelItem => item.link)</a></p>
        </div>
    </div>
}

<p>
    @Html.ActionLink("Back to Donor Recognition Levels", "Index")
</p>

<p><a href="https://www.canadahelps.org/CharityProfilePage.aspx?charityID=s19061" target="_blank" class="userlink"><img src="/Images/CanadaHelps.png" alt="Canada Helps" width="250" height="110" singleimage="true" style="clear:both;display:block;height:110px;margin:0px auto 10px auto;text-align:center;width:250px;"></a></p>